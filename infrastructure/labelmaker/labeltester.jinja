{% set COMPUTE_URL_BASE = 'https://www.googleapis.com/compute/v1/' %}
{% set ID = env['deployment'] + '-' + env['name'] %}

resources:
- name: {{ ID }}
  type: compute.v1.instance
  properties:
    zone: {{ properties['zone'] }}
    machineType: {{ properties["machineType"] }}
    metadata:
      items:
        - key: startup-script
          value: |
            #!/bin/bash -e
            apt-get update
            apt-get -y install python-pip
            pip install --upgrade google-api-python-client
            gsutil cp {{ properties['labelmaker'] }} .
            ## Valid json please
            ## Only lowercase characters a-z, numbers 0-9 and dashes allowed
            cat <<EOF > /tmp/labels.json
            {
              "go": "bears",
              "looks-like-tag": ""
            }
            EOF
            python labelmaker.py /tmp/labels.json
    disks:
      - deviceName: boot
        boot: true
        autoDelete: true
        mode: READ_WRITE
        type: PERSISTENT
        initializeParams:
          diskSizeGb: 10
          sourceImage: {{ properties["sourceImage" ] }}
      - deviceName: xvde
        boot: false
        autoDelete: true
        mode: READ_WRITE
        type: PERSISTENT
        initializeParams:
          diskSizeGb: 10
          diskType: zones/{{ properties["zone"] }}/diskTypes/pd-ssd
          sourceImage: {{ properties["blankImage" ] }}
      - deviceName: xvdf
        boot: false
        autoDelete: true
        mode: READ_WRITE
        type: PERSISTENT
        initializeParams:
          diskSizeGb: 10
          diskType: zones/{{ properties["zone"] }}/diskTypes/pd-ssd
          sourceImage: {{ properties["blankImage" ] }}
      - deviceName: xvdg
        boot: false
        autoDelete: true
        mode: READ_WRITE
        type: SCRATCH
        initializeParams:
          diskType: zones/{{ properties["zone"] }}/diskTypes/local-ssd
    networkInterfaces:
      - name: {{ ID }}-eth0
        network: {{ properties["network"] }}
        subnetwork: {{ properties["subnetwork"] }}
        accessConfigs:
          - name: eth0
            type: ONE_TO_ONE_NAT
    serviceAccounts: 
      - email: {{ properties["serviceAccount"] }}
        scopes:
          - "https://www.googleapis.com/auth/cloud-platform"
    tags:
      items:
        - {{ ID }}
